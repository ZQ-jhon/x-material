{
  "name": "x-material",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo --open --port=4100",
    "format": "prettier --config .prettier.config.js projects/x-material/src/**/*.ts --write",
    "stylelint": "stylelint \"projects/**/*.scss\" --config .stylelint.config.js",
    "build": "npm run build:x-material && npm run build:theme",
    "build:x-material": "ng build x-material",
    "build:theme": "scss-bundle -c ./projects/x-material/scss-bundle.config.json",
    "lint": "ng lint",
    "test": "jest --config ./jest.config.js",
    "e2e": "ng e2e"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run stylelint && ng lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "hammerjs": "^2.0.8",
    "moment": "^2.22.2",
    "rxjs": "~6.4.0",
    "stylelint": "^13.0.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.20",
    "@angular-devkit/build-ng-packagr": "^0.803.24",
    "@angular/cli": "~8.3.20",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/jest": "^25.2.1",
    "@types/moment": "^2.13.0",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^25.2.1",
    "jest-preset-angular": "^8.1.3",
    "ng-packagr": "^5.7.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.0",
    "scss-bundle": "^3.1.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^25.4.0",
    "ts-node": "~7.0.0",
    "tsickle": "^0.38.0",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "~3.5.3"
  }
}
